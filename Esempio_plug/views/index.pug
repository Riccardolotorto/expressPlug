doctype html
html
 head
    title #{title}
    link(rel='stylesheet', href='/css/style.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
 body
    header.header
        h1 #{title}
    article.container #{content}
    each person in people
        div.person
            img(src=`/images/${person.imgSrc}`, alt="").person-image
            h2.person-name #{person.firstname} #{person.lastname}
            a(href=`/profile?id=${person.id}`) View Profile